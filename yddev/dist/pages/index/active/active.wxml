<tab items="{{tabItems}}" bindchange="swithTab" current="0"></tab>
<scroll-view class="tab-scroll-view"
             scroll-y="true"
             enable-back-to-top="true"
             style="height:{{scrollViewHeight}}px;">
    <activity wx:if="{{currentPage == 'active'}}"></activity>
    <award wx:if="{{currentPage == 'award'}}"></award>
</scroll-view>